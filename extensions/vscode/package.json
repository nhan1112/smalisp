{
  "name": "smalisp",
  "displayName": "Smalisp",
  "description": "Smali language support for vscode",
  "version": "0.1.0",
  "repository": "https://github.com/AbhiTheModder/smalisp",
  "publisher": "qbtaumai",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "smali",
        "aliases": ["Smali"],
        "extensions": ["smali"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "smali",
        "scopeName": "source.smali",
        "path": "./syntaxes/smali.tmLanguage"
      }
    ],
    "configuration": {
      "title": "Smalisp",
      "properties": {
        "smalisp.serverPath": {
          "type": "string",
          "default": "smalisp",
          "description": "Path to the Smalisp language server binary"
        }
      }
    },
    "commands": [
      {
        "command": "smalisp.restartServer",
        "title": "Restart Smalisp Language Server"
      }
    ],
    "keybindings": [
      {
        "command": "smalisp.restartServer",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r",
        "when": "editorLangId == smali"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.105.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "esbuild": "^0.27.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
